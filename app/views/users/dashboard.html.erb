<div class="filter">

  <button class="btn btn-default filter-button" id="savedDealsButton" data-filter="all">My Saved Deals</button>
  <button class="btn btn-default filter-button" id="preferredDealsButton" data-filter="all">Show Preferred Deals</button>
</div>
<main>
  <div class="results">
  </div>
</main>
<script id="source" type="template">
  <div class="demo-card-wide mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title" style="background: url({{image_url}}) center / cover">
      <h2 class="mdl-card__title-text">{{title}}</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <p>"{{description}} \\n"</p>
      <p class="price">{{price}}</p>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <a href="/users/<%= session[:user_id] %>/deals/{{id}}" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        Purchase
      </a>
    </div>
    <div class="mdl-card__menu">
      <button class="mdl-button mdl-js-ripple-effect saveThisDeal fav_{{is_favorite}}" data-deal_id="{{id}}" data-user_id="<%= session[:user_id] %>">
        Save
      </button>
    </div>
  </div>
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.10/handlebars.js"></script>
